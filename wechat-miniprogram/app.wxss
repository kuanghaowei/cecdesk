/* app.wxss */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* 通用样式 */
.container {
  padding: 20rpx;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 按钮样式 */
.btn-primary {
  background-color: #2196F3;
  color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-primary:active {
  background-color: #1976D2;
}

.btn-secondary {
  background-color: #ffffff;
  color: #2196F3;
  border: 2rpx solid #2196F3;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}

.btn-disabled {
  background-color: #cccccc;
  color: #999999;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: #333333;
}

.input-field:focus {
  border-color: #2196F3;
  background-color: #ffffff;
}

/* 列表样式 */
.list-item {
  background-color: #ffffff;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.list-item-subtitle {
  font-size: 26rpx;
  color: #999999;
}

.list-item-action {
  color: #2196F3;
  font-size: 28rpx;
}

/* 状态指示器 */
.status-indicator {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-online {
  background-color: #e8f5e8;
  color: #4caf50;
}

.status-offline {
  background-color: #ffebee;
  color: #f44336;
}

.status-connecting {
  background-color: #fff3e0;
  color: #ff9800;
}

/* 进度条样式 */
.progress-container {
  background-color: #f0f0f0;
  border-radius: 10rpx;
  height: 8rpx;
  overflow: hidden;
  margin: 16rpx 0;
}

.progress-bar {
  background-color: #2196F3;
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #cccccc;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.mt-16 {
  margin-top: 16rpx;
}

.mt-32 {
  margin-top: 32rpx;
}

.mb-16 {
  margin-bottom: 16rpx;
}

.mb-32 {
  margin-bottom: 32rpx;
}

.p-16 {
  padding: 16rpx;
}

.p-32 {
  padding: 32rpx;
}