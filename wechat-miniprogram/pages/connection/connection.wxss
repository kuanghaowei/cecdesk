/* pages/connection/connection.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 网络状态栏 */
.network-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.network-status.connected {
  border-left: 6rpx solid #4CAF50;
}

.network-status.disconnected {
  border-left: 6rpx solid #f44336;
}

.network-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.network-type {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
}

.signal-icon {
  font-size: 20rpx;
}

.network-text {
  font-size: 24rpx;
  color: #666666;
}

/* 连接状态区域 */
.connection-status {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.status-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.status-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.status-indicator.connecting .status-icon {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

/* 连接信息 */
.connection-info {
  border-top: 1rpx solid #e0e0e0;
  padding-top: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
  flex: 1;
  word-break: break-all;
}

/* 连接表单 */
.connection-form {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 15rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #667eea;
  background-color: #ffffff;
}

/* 连接选项 */
.connection-options {
  border-top: 1rpx solid #e0e0e0;
  padding-top: 30rpx;
  margin-bottom: 40rpx;
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 25rpx;
}

.option-item:last-child {
  margin-bottom: 0;
}

.option-label {
  font-size: 26rpx;
  color: #333333;
}

.picker-text {
  font-size: 24rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
  background-color: #f0f4ff;
  border-radius: 6rpx;
  min-width: 80rpx;
  text-align: center;
}

switch {
  transform: scale(0.8);
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.connect-btn, .scan-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.connect-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.connect-btn.disabled {
  background: #cccccc;
  color: #999999;
  box-shadow: none;
}

.scan-btn {
  background-color: #ffffff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.connect-btn:active:not(.disabled) {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.scan-btn:active {
  background-color: #f0f4ff;
}

/* 已连接状态的操作 */
.connected-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  color: #ffffff;
}

.desktop-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
}

.file-btn {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  box-shadow: 0 4rpx 16rpx rgba(33, 150, 243, 0.4);
}

.disconnect-btn {
  background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
  box-shadow: 0 4rpx 16rpx rgba(244, 67, 54, 0.4);
}

.action-btn:active {
  transform: translateY(2rpx);
}

/* 连接历史 */
.history-section {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.clear-history {
  font-size: 24rpx;
  color: #ff5722;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background-color: #fff3e0;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.history-info {
  flex: 1;
  cursor: pointer;
}

.history-id {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 22rpx;
  color: #666666;
}

.history-actions {
  margin-left: 20rpx;
}

.delete-btn {
  font-size: 22rpx;
  color: #f44336;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background-color: #ffebee;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .connection-status, .connection-form, .history-section {
    padding: 30rpx;
  }
  
  .form-title {
    font-size: 28rpx;
  }
  
  .input-field {
    height: 70rpx;
    font-size: 26rpx;
  }
  
  .connect-btn, .scan-btn, .action-btn {
    height: 80rpx;
    font-size: 28rpx;
  }
}

/* 深色主题支持 */
@media (prefers-color-scheme: dark) {
  .network-status, .connection-status, .connection-form, .history-section {
    background-color: rgba(30, 30, 30, 0.95);
  }
  
  .form-title, .status-text, .info-value, .history-id {
    color: #ffffff;
  }
  
  .network-text, .info-label, .option-label, .history-time {
    color: #cccccc;
  }
  
  .input-field {
    background-color: #333333;
    border-color: #555555;
    color: #ffffff;
  }
  
  .input-field:focus {
    background-color: #444444;
  }
  
  .history-item {
    background-color: #333333;
  }
}

/* 动画效果 */
.connection-form, .connected-actions, .history-section {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}