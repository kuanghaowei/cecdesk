/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

/* 已登录状态 */
.logged-in-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  margin-top: 32rpx;
}

.user-status {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
}

.logout-btn {
  margin-top: 80rpx;
  width: 300rpx;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

/* 未登录状态 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-header {
  text-align: center;
  padding-top: 100rpx;
  margin-bottom: 80rpx;
}

.app-logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录方式按钮 */
.login-methods {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.wechat-login-btn,
.phone-quick-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.wechat-login-btn {
  background-color: #07c160;
  color: #ffffff;
}

.phone-quick-btn {
  background-color: #ffffff;
  color: #333333;
}

.btn-icon {
  font-size: 36rpx;
}

/* 分隔线 */
.divider {
  display: flex;
  align-items: center;
  width: 100%;
  margin: 48rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.divider-text {
  padding: 0 24rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 手机号登录表单 */
.phone-login-form {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 32rpx;
  text-align: center;
}

.input-group {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  height: 96rpx;
}

.input-prefix {
  font-size: 32rpx;
  color: #333333;
  margin-right: 16rpx;
  padding-right: 16rpx;
  border-right: 1rpx solid #e0e0e0;
}

.phone-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333333;
}

.code-group {
  padding-right: 0;
}

.code-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333333;
}

.send-code-btn {
  width: 200rpx;
  height: 64rpx;
  background-color: #2196F3;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 32rpx;
  padding: 0;
  margin: 0;
  line-height: 64rpx;
}

.send-code-btn.disabled {
  background-color: #cccccc;
}

.verify-login-btn {
  width: 100%;
  height: 96rpx;
  background-color: #2196F3;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  margin-top: 16rpx;
}

.verify-login-btn[disabled] {
  background-color: #cccccc;
}

/* 协议同意 */
.agreement {
  margin-top: 48rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}

.agreement .link {
  color: #ffffff;
  text-decoration: underline;
}
