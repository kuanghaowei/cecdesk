/* pages/remote-desktop/remote-desktop.wxss */

.remote-desktop-container {
  width: 100vw;
  height: 100vh;
  background-color: #000000;
  position: relative;
  overflow: hidden;
}

/* 连接状态遮罩 */
.connecting-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.connecting-content {
  text-align: center;
  color: #ffffff;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #2196F3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 40rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.connecting-text {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.connecting-tip {
  display: block;
  font-size: 28rpx;
  color: #cccccc;
}

/* 桌面显示区域 */
.desktop-display {
  width: 100vw;
  height: 100vh;
  position: relative;
  background-color: #000000;
}

.desktop-display.fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

/* Canvas 画布 */
.desktop-canvas {
  width: 100%;
  height: 100%;
  display: block;
  touch-action: none;
}

/* 实时播放器 */
.live-player {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.live-player.show {
  display: block;
}

.live-player.hide {
  display: none;
}

/* 连接状态指示器 */
.connection-status {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  z-index: 10;
  transition: opacity 0.3s ease;
}

.connection-status.show {
  opacity: 1;
}

.connection-status.hide {
  opacity: 0;
  pointer-events: none;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 2s infinite;
}

.status-dot.excellent {
  background-color: #4CAF50;
}

.status-dot.good {
  background-color: #8BC34A;
}

.status-dot.fair {
  background-color: #FF9800;
}

.status-dot.poor {
  background-color: #F44336;
}

.status-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
}

/* 网络统计信息 */
.network-stats {
  position: absolute;
  bottom: 200rpx;
  left: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  z-index: 10;
  transition: opacity 0.3s ease;
}

.network-stats.show {
  opacity: 1;
}

.network-stats.hide {
  opacity: 0;
  pointer-events: none;
}

.stats-text {
  color: #ffffff;
  font-size: 24rpx;
  font-family: 'Courier New', monospace;
}

/* 未连接状态 */
.disconnected-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #ffffff;
  z-index: 5;
}

.disconnected-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.disconnected-title {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.disconnected-subtitle {
  display: block;
  font-size: 28rpx;
  color: #cccccc;
  margin-bottom: 60rpx;
}

.btn-reconnect {
  background-color: #2196F3;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-reconnect:active {
  background-color: #1976D2;
}

/* 控制面板 */
.control-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.6));
  padding: 40rpx 20rpx 60rpx;
  z-index: 20;
  transition: transform 0.3s ease;
}

.control-panel.show {
  transform: translateY(0);
}

.control-panel.hide {
  transform: translateY(100%);
}

.control-buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: background-color 0.2s ease;
  min-width: 100rpx;
}

.control-btn:active {
  background-color: rgba(255, 255, 255, 0.1);
}

.control-btn.disconnect:active {
  background-color: rgba(244, 67, 54, 0.2);
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}

.btn-text {
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
}

.control-btn.disconnect .btn-text {
  color: #ff6b6b;
}

/* 操作提示 */
.operation-hint {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  z-index: 10;
  transition: opacity 0.3s ease;
}

.operation-hint.show {
  opacity: 1;
  animation: fadeInOut 3s ease-in-out infinite;
}

.operation-hint.hide {
  opacity: 0;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.7);
  }
  70% {
    box-shadow: 0 0 0 20rpx rgba(76, 175, 80, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0);
  }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .control-buttons {
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .control-btn {
    min-width: 120rpx;
  }
}

/* 横屏适配 */
@media (orientation: landscape) {
  .control-panel {
    padding: 20rpx;
  }
  
  .control-buttons {
    gap: 40rpx;
  }
  
  .network-stats {
    bottom: 120rpx;
  }
}