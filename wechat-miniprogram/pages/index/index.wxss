/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 连接状态动画 */
.btn-primary[disabled] {
  background-color: #90caf9 !important;
  position: relative;
  overflow: hidden;
}

.btn-primary[disabled]::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

/* 扫码按钮样式 */
.btn-secondary {
  min-width: 120rpx;
  padding: 24rpx 32rpx;
}

/* 状态指示器动画 */
.status-online::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #4caf50;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.7);
  }
  70% {
    box-shadow: 0 0 0 20rpx rgba(76, 175, 80, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0);
  }
}

/* 历史记录项悬停效果 */
.list-item:active {
  background-color: #f8f9fa;
}

/* 删除按钮样式 */
.list-item-action {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s;
}

.list-item-action:active {
  background-color: #ffebee;
  color: #f44336;
}

/* 空状态样式优化 */
.empty-state {
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

/* 输入框焦点状态 */
.input-field:focus {
  border-color: #2196F3;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(33, 150, 243, 0.1);
}

/* 响应式布局 */
@media (max-width: 750rpx) {
  .flex {
    flex-direction: column;
  }
  
  .flex > .btn-secondary {
    margin-top: 16rpx;
  }
}