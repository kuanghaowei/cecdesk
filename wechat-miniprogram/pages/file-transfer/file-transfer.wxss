/* pages/file-transfer/file-transfer.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 标签页导航 */
.tab-bar {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1px solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #2196F3;
  border-bottom-color: #2196F3;
  font-weight: bold;
}

/* 标签页内容 */
.tab-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 发送文件区域 */
.send-section {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.add-files-btn {
  background-color: #ffffff;
  border: 2rpx dashed #2196F3;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.add-files-btn:active {
  background-color: #f0f8ff;
  transform: scale(0.98);
}

.add-icon {
  font-size: 60rpx;
  color: #2196F3;
  margin-bottom: 20rpx;
}

.add-files-btn text {
  font-size: 28rpx;
  color: #2196F3;
}

/* 文件列表 */
.file-list {
  flex: 1;
  margin-bottom: 30rpx;
}

.file-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.file-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.file-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.file-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.file-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.file-size {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.file-status {
  font-size: 24rpx;
  color: #999999;
}

/* 进度条 */
.progress-bar {
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #2196F3;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 文件操作按钮 */
.file-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.remove-btn, .save-btn, .delete-btn {
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  text-align: center;
  min-width: 80rpx;
}

.remove-btn {
  background-color: #ff5722;
  color: #ffffff;
}

.save-btn {
  background-color: #4CAF50;
  color: #ffffff;
}

.delete-btn {
  background-color: #f44336;
  color: #ffffff;
}

/* 发送按钮 */
.send-btn-container {
  padding: 20rpx 0;
}

.send-btn {
  width: 100%;
  background-color: #2196F3;
  color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.send-btn.disabled {
  background-color: #cccccc;
  color: #999999;
}

/* 接收文件区域 */
.receive-section {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.request-btn-container {
  margin-bottom: 30rpx;
}

.request-btn {
  width: 100%;
  background-color: #4CAF50;
  color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

/* 历史记录区域 */
.history-section {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.clear-btn-container {
  margin-bottom: 30rpx;
  text-align: right;
}

.clear-btn {
  background-color: #ff9800;
  color: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  border: none;
}

.history-list {
  flex: 1;
}

.history-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.history-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.history-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.history-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.history-size {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 22rpx;
  color: #999999;
}

.history-status {
  margin-left: 20rpx;
}

.status-text {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-weight: bold;
}

.status-text.success {
  background-color: #e8f5e8;
  color: #4CAF50;
}

.status-text.failed {
  background-color: #ffebee;
  color: #f44336;
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .file-item {
    padding: 24rpx;
  }
  
  .file-name {
    font-size: 26rpx;
  }
  
  .file-size, .file-status {
    font-size: 22rpx;
  }
  
  .send-btn, .request-btn {
    font-size: 28rpx;
    padding: 26rpx;
  }
}

/* 动画效果 */
.file-item {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

/* 错误状态 */
.error {
  border-left: 6rpx solid #f44336;
}

.error .file-status {
  color: #f44336;
}